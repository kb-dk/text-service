<% document ||= @document %>
<% collection = document['subcollection_ssi'] %>
<% doc_presenter = show_presenter(document) %>
<div id="info-box" class="hidden toggle-content">
<dl class="row dl-invert document-metadata">
  <% doc_presenter.fields_to_render.each do |field_name, field| -%>
          <div class="col-sm-12">
            <strong><%= raw render_document_show_field_label document, field: field_name %></strong><br>
            <%= raw doc_presenter.field_value field %>

          </div>
          <br>
  <% end -%>
  <% if collection == "tfs" %>
  <div class="col-sm-12">
    <strong>Ophavsret</strong><br>
    Materialet er fri af ophavsret. Du kan kopiere, ændre, distribuere eller fremføre værket,
    også til kommercielle formål, uden at bede om tilladelse.<br />
    <a rel="license" href="https://creativecommons.org/publicdomain/mark/1.0/deed.da">
      <img alt="Creative Commons-licens" style="border-width:0" src="https://i.creativecommons.org/p/mark/1.0/88x31.png" />
    </a><br />
    <a rel="license" href="https://creativecommons.org/publicdomain/mark/1.0/deed.da">Læs Public Domain-erklæringen</a>.
  </div>
  <% end %>
</dl>
</div>
